{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleDirectories": ["node_modules", "src/server", "test"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "globalSetup": "<rootDir>/test/server/setup.ts",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/server/**/*.(t|j)s",
    "!**/*.module.ts",
    "!**/*.spec.ts",
    "!**/main.ts",
    "!**/db/migrations/*.ts",
    "!server/libs/swagger.ts"
  ],
  "coverageDirectory": "../coverage"
}
